<odoo>
    <record id="view_bank_statement_normalization_form" model="ir.ui.view">
        <field name="name">bank.statement.normalization.form</field>
        <field name="model">bank.statement.normalization</field>
        <field name="arch" type="xml">
            <form string="Bank Statement Normalization">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="file_type"/>
                        <field name="bank_name"/>
                        <field name="file" filename="statement_file"/>
                    </group>
                    <group>
                        <!-- QIF Separator field, shown only when the file type is QIF -->
                        <field name="qif_separator" attrs="{'invisible': [('file_type', '!=', 'qif')]}"/>
                    </group>
                    <button name="process_statement" string="Process Statement" type="object" class="btn-primary"/>
                    <field name="processed_data" filename="processed_data.xlsx"/>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="menu_bank_statement_normalization" name="Bank Statement Normalization" sequence="10"/>

    <menuitem id="submenu_bank_statement_normalization" name="Statements" parent="menu_bank_statement_normalization" action="action_bank_statement_normalization"/>
</odoo>