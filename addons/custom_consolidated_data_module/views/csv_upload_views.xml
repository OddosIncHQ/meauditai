<odoo>
    <record id="view_csv_upload_form" model="ir.ui.view">
        <field name="name">csv.upload.form</field>
        <field name="model">csv.upload</field>
        <field name="arch" type="xml">
            <form string="CSV Upload">
                <group>
                    <field name="file_name"/>
                    <field name="file_data" filename="file_name"/>
                </group>
                <group>
                    <field name="rut"/>
                    <field name="file_creation_date"/>
                    <field name="extraction_date"/>
                    <field name="unique_code"/>
                </group>
                <footer>
                    <button string="Analyze CSV" type="object" name="action_analyze_csv" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
