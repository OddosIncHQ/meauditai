<odoo>
    <record id="view_bank_statement_import_wizard_form" model="ir.ui.view">
        <field name="name">bank.statement.import.wizard.form</field>
        <field name="model">bank.statement.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Bank Statement from Excel">
                <group>
                    <field name="file_data" filename="file_name" widget="binary" />
                    <field name="file_name" />
                </group>
                <footer>
                    <button string="Import" type="object" name="import_bank_statement" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
